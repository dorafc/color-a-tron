{
  "name": "color-a-tron",
  "version": "0.0.0-semantically-released",
  "description": "generate HSL and hex string color palettes",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "semantic-release": "semantic-release",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dorafc/color-a-tron.git"
  },
  "keywords": [
    "color",
    "palette",
    "hsl",
    "hex"
  ],
  "author": "Dora F. Caswell <dorafraeman@gmail.com> (https://dorafc.github.io/)",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/dorafc/color-a-tron/issues"
  },
  "homepage": "https://github.com/dorafc/color-a-tron#readme",
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "babel-jest": "26.3.0",
    "commitizen": "4.2.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "semantic-release": "^17.1.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "tagFormat": "${version}"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
